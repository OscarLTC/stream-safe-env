{
  "name": "stream-safe-env",
  "displayName": "Stream Safe Env",
  "description": "Hide sensitive .env variables when streaming or screen sharing",
  "version": "0.0.1",
  "publisher": "OscarLTC",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/OscarLTC/stream-safe-env"
  },
  "keywords": [
    "env",
    "environment",
    "security",
    "streaming",
    "privacy"
  ],
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.106.0"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "envMask.toggle",
        "title": "Toggle Env Masking"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
